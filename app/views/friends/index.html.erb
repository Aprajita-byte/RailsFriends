<% if user_signed_in? %>

  <table class="table table-striped  table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>E-mail</th>
        <th></th>
      </tr>
    </thead >
    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
            <td><%= link_to friend.name, friend, :style=> 'text-decoration:none;'%></td>
            <td><%= friend.email %></td>
            <td><%= button_to "Delete", friend, method: :delete , class:"btn btn-outline-danger btn-sm" %></td>   
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to "New friend", new_friend_path , class: "btn btn-secondary" %>

<% else %>

  <h1>No Friends</h1>
  <p>just log In and start making your friends list.</p>

<% end %>